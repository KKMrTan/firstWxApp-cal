.main{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background-color:gray;
    background-image: url(../assets/img/bg.png);
    background-repeat: repeat;
    padding-top: 30rpx;
}
.result{
    background-color: white;
    border-radius: 3px;
    text-align: right;
    width: 720rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding-right: 10rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
}
.btn{
    display: flex;
    flex-direction: row;
}
.item{
    width: 160rpx;
    height: 150rpx;
    line-height: 150rpx;
    margin: 10rpx;
    text-align: center;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
    color: white;
    font-weight: bold;
    border-radius: 5px;
}
.blue{
    background-color: deepskyblue;
}
.orange{
    background-color: orange;
}
.history{
    width: 700rpx;   
}
